{
	"compilerOptions": {
	  "target": "es2018",
	  "module": "commonjs",
	  "allowJs": true,
	  "checkJs": false,
	  "outDir": "lib",
	  "strict": false,
	  "strictNullChecks": true,
	  "noImplicitThis": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "declaration": true,
	  "resolveJsonModule": true,
	  "lib": [ "es2020", "DOM" ]
	},
	"include": [
	  "src/*.ts", 
	  "src/*/*.ts",
	  "src/*.js",
	  "src/*/*.js"
	],
	"exclude": [
	  "node_modules", 
	  "src/tests"
	]
  }
  